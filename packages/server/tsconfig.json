{
  "compilerOptions": {
    "outDir": "./lib",  // Compiled files will go here
    "rootDir": "./src", // Source files are here
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"], // Include all files in src/
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude unnecessary files
}
