{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Enable default imports
    "skipLibCheck": true     // Skip type checks in node_modules
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
